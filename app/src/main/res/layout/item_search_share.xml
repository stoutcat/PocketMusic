<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_padding_16dp">

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/item_head"
        android:layout_height="@dimen/item_head"
        android:src="@mipmap/ico_launcher" />

    <LinearLayout

        android:id="@+id/content_ll"
        style="@style/TwoTextLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/TwoTextMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="化身孤岛的鲸" />

        <TextView
            android:id="@+id/content_tv"
            style="@style/TwoTextSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="描述" />

    </LinearLayout>


</LinearLayout>


